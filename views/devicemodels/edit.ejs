<% include ../partials/header %>
<div class="container">
    <!--<will need to create my own style sheet to center the 2 inputs and make them
    smaller>-->
    <div class="row">
        <h2 style="text-align: center;">Edit Device Model </h2>
        <!--<margin 25 px for top and bottom, auto for left and right>-->
        <div style="width:30%; margin:25px auto;">
            <form method="POST" action="/devicemodels/<%= deviceModel._id %>/?_method=PUT">
                <!--<use form-group to make spacing between components>-->
                <div class="form-group">
                    <label for="oid">OID</label>
                    <input class="form-control" type="text" name="deviceModel[oid]" value="<%= deviceModel.oid %>">
                </div>
                <div class="form-group">
                    <label for="type">Type</label>
                    <input class="form-control" type="text" name="deviceModel[type]" value="<%= deviceModel.type %>">
                </div>
                <div class="form-group">
                    <label for="vendor">Vendor</label>
                    <input class="form-control" type="text" name="deviceModel[vendor]" value="<%= deviceModel.vendor %>">
                </div>
                <div class="form-group">
                    <label for="model">Model</label>
                    <input class="form-control" type="text" name="deviceModel[model]" value="<%= deviceModel.model %>">
                </div>
                <div class="form-group">
                    <!--<btn-block will let the button takes width of the 2 inputs>-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <!--<a href="/devices/<%= deviceModel._id %>/">Go Back</a>-->
            <a href="/devicemodels/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>