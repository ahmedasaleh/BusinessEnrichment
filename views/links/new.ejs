<% include ../partials/header %>
<div class="container">
    <!--<will need to create my own style sheet to center the 2 inputs and make them
    smaller>-->
    <div class="row">
        <h1 style="text-align: center;">Add A New Link</h1>
        <!--<margin 25 px for top and bottom, auto for left and right>-->
        <div style="width:30%; margin:25px auto;">
            <form method="POST" action="/links">
                <!--<use form-group to make spacing between components>-->
                <div class="form-group">
                    <input class="form-control" type="text" name="link[device1]" required="true" placeholder="device1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link[interface1]" required="true" placeholder="interface1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link[device2]" required="true" placeholder="device2">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link[interface2]" required="true" placeholder="interface2">
                </div>
                <div class="form-group">
                    <!--<btn-block will let the button takes width of the 2 inputs>-->
                    <button class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
            <a href="/links">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>