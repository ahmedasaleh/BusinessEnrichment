<% include ../partials/header %>
<div class="container">
    <!--<will need to create my own style sheet to center the 2 inputs and make them
    smaller>-->
    <div class="row">
        <h2 style="text-align: center;">Edit Link Between <%= link.device1 %>/<%= link.interface1 %> <%= link.device2 %>/<%= link.interface2 %></h2>
        <!--<margin 25 px for top and bottom, auto for left and right>-->
        <div style="width:30%; margin:25px auto;">
            <form method="POST" action="/links/<%= link._id %>/?_method=PUT">
                <!--<use form-group to make spacing between components>-->
                <div class="form-group">
                    <input class="form-control" type="text" name="link[device1]" value="<%= link.device1 %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link[interface1]" value="<%= link.interface1 %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link[device2]" value="<%= link.device2 %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link[interface2]" value="<%= link.interface2 %>">
                </div>
                <div class="form-group">
                    <!--<btn-block will let the button takes width of the 2 inputs>-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <!--<a href="/devices/<%= link._id %>/">Go Back</a>-->
            <a href="/links/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>