<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">BET</p>
            <div class="list-group">
                <a href="/devices/"><li class="list-group-item" href="/devices">All Devices</li></a>
                <a href="/pops/"><li class="list-group-item">All POPs</li></a>
                <a href="/governorates/"><li class="list-group-item active" href="/governorates">All Governorates</li></a>
                <a href="/sectors/"><li class="list-group-item">All Sectors</li></a>
                <a href="/links/"><li class="list-group-item">All Links</li></a>
                <a href="/users/"><li class="list-group-item">All Users</li></a>
            </div>
        </div>
        
        <div class="col-md-9">
            <h1><%= link.name  %></h1>
            <div class="thumbnail">
                <!--<img class="img-responsive" src="/images/router.png">-->
                <div class="caption-full">
                    <h4 class="pull-right">Interface1: <%= link.interface1  %></h4>
                    <h4><a href="/links/<%= link._id %>"><%= link.device1  %></a></h4>
                    <h4 class="pull-right">Interface2: <%= link.interface2  %></h4>
                    <h4><a href="/links/<%= link._id %>"><%= link.device2  %></a></h4>
                    <% if(link.author.email == undefined){ %>
                        <p><em>Added By: admin imported</em></p>
                    <% } else { %>
                        <p><em>Added By:  <%= link.author.email %></em></p>
                    <% } %>
                    
                    <% if(currentUser && link.author.id && link.author.id.equals(currentUser._id)){ %> 
                        <a class="btn btn-warning" href="/links/<%= link._id %>/edit">Edit</a>
                        <form id="delete-form" action="/links/<%= link._id %>/?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>