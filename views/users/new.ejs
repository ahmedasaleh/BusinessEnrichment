<% include ../partials/header %>
<div class="container">
    <!--<will need to create my own style sheet to center the 2 inputs and make them
    smaller>-->
    <div class="row">
        <h1 style="text-align: center;">Add A New User</h1>
        <!--<margin 25 px for top and bottom, auto for left and right>-->
        <div style="width:30%; margin:25px auto;">
            <form method="POST" action="/users">
                <!--<use form-group to make spacing between components>-->
                <div class="form-group">
                    <input class="form-control" type="text" name="user[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[rol]" placeholder="Role">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[email]" placeholder="email">
                </div>
                <div class="form-group">
                    <!--<btn-block will let the button takes width of the 2 inputs>-->
                    <button class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
            <a href="/users">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>