<% include ../partials/header %>
<div class="container">
    <!--<will need to create my own style sheet to center the 2 inputs and make them
    smaller>-->
    <div class="row">
        <h1 style="text-align: center;">Edit User <%= user.name %></h1>
        <!--<margin 25 px for top and bottom, auto for left and right>-->
        <div style="width:30%; margin:25px auto;">
            <form method="POST" action="/users/<%= user._id %>/?_method=PUT">
                <!--<use form-group to make spacing between components>-->
                <div class="form-group">
                    <label for="username">User Name</label>
                    <input class="form-control" type="text" name="user[name]" value="<%= user.name %>" readonly>
                </div>
                <div class="form-group">
                    <label for="role">User Role</label>
                    <input class="form-control" type="text" name="user[role]" value="<%= user.role %>">
                </div>
                <div class="form-group">
                    <!--<btn-block will let the button takes width of the 2 inputs>-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <!--<a href="/devices/<%= user._id %>/">Go Back</a>-->
            <a href="/users/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>