<% include ../partials/header %>
<div class="container">
    <!--<will need to create my own style sheet to center the 2 inputs and make them
    smaller>-->
    <div class="row">
        <h1 style="text-align: center;">Edit <%= device.hostname %></h1>
        <!--<margin 25 px for top and bottom, auto for left and right>-->
        <div style="width:30%; margin:25px auto;">
            <form method="POST" action="/devices/<%= device._id %>/?_method=PUT">
                <!--<use form-group to make spacing between components>-->
                <div class="form-group">
                    <label for="hostname">Host Name</label>
                    <input class="form-control" type="text" name="device[hostname]" value="<%= device.hostname %>" readonly>
                </div>
                <div class="form-group">
                    <label for="ipaddress">IP Address</label>
                    <input class="form-control" type="text" name="device[ipaddress]" value="<%= device.ipaddress %>" readonly>
                </div>
                <div class="form-group">
                    <label for="communityString">Community String</label>
                    <input class="form-control" type="text" name="device[communityString]" value="<%= device.communityString %>">
                </div>
                <div class="form-group">
                    <label for="popName">POP Name</label>
                    <input class="form-control" type="text" name="device[popName][name]" value="<%= device.popName.name %>">
                </div>
                <div class="form-group">
                    <label for="sector">Sector Name</label>
                    <input class="form-control" type="text" name="device[sector][name]" value="<%= device.sector.name %>">
                </div>
                <div class="form-group">
                    <label for="governorate">Governorate Name</label>
                    <input class="form-control" type="text" name="device[governorate][name]" value="<%= device.governorate.name %>">
                </div>
                <div class="form-group">
                    <label for="type">Type</label>
                    <!-- <input class="form-control" type="text" name="device[type]" value="<%= device.type %>"> -->
                    <select class="form-control selectpicker" name="device[type]" value="<%= device.type %>">
                      <option>Router</option>
                      <option>Switch</option>
                      <option>Access Switch</option>
                      <option>DSLAM</option>
                      <option>MSAN</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="model">Model</label>
                    <input class="form-control" type="text" name="device[model]" value="<%= device.model %>">
                </div>
                <div class="form-group">
                    <label for="vendor">Vendor</label>
                    <input class="form-control" type="text" name="device[vendor]" value="<%= device.vendor %>">
                </div>
                <div class="form-group">
                    <!--<btn-block will let the button takes width of the 2 inputs>-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <!--<a href="/devices/<%= device._id %>/">Go Back</a>-->
            <a href="/devices/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>