<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Interface to <%= device.hostname %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/devices/<%= device._id %>/interfaces" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="interface[name]" placeholder="interface name">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add!</button>
                </div>
            </form>
            <a href="/devices">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

