                </div>
 -->                <div id="sp_connType" class="form-group" >
                    <label for="sp_connType">Connection Type</label>
                    <input class="form-control" type="text" name="interface[sp_connType]" value="<%= interface.sp_connType %>">
                </div>
                <div id="sp_bundleId" class="form-group" >
                    <label for="sp_bundleId">Bundle Id</label>
                    <input class="form-control" type="text" name="interface[sp_bundleId]" value="<%= interface.sp_bundleId %>">
                </div>
                <div id="sp_linkNumber" class="form-group" >
                    <label for="sp_linkNumber">Link Number</label>
                    <input class="form-control" type="text" name="interface[sp_linkNumber]" value="<%= interface.sp_linkNumber %>">
                </div>
                <div id="sp_provider" class="form-group" >
                    <label for="sp_provider">Provider</label>
                    <input class="form-control" type="text" name="interface[sp_provider]" value="<%= interface.sp_provider %>">
                </div>
                <div id="sp_service" class="form-group" >
                    <label for="sp_service">Service</label>
                    <input class="form-control" type="text" name="interface[sp_service]" value="<%= interface.sp_service %>">
                </div>
