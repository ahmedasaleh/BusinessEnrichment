<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Interface</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/devices/<%= interface.device.id %>/interfaces/<%= interface._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="interface[name]" value="<%= interface.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="interface[alias]" value="<%= interface.alias %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="interface[index]" value="<%= interface.index %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="interface[type]" value="<%= interface.type %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="interface[speed]" value="<%= interface.speed %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="interface[device]" value="<%= interface.device.hostname %>" readonly>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/devices/<%= interface.device.id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

