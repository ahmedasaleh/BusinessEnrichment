<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Interface</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/interfaces/<%= interface._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="interfacename">Interface Name</label>
                    <input class="form-control" type="text" name="interface[ifName]" value="<%= interface.ifName %>" readonly>
                </div>
                <div class="form-group">
                    <label for="description">Interface Description</label>
                    <input class="form-control" type="text" name="interface[ifDescr]" value="<%= interface.ifDescr %>" readonly>
                </div>
                <div class="form-group">
                    <label for="alias">Interface Alias</label>
                    <input class="form-control" type="text" name="interface[ifAlias]" value="<%= interface.ifAlias %>" readonly>
                </div>
                <div class="form-group">
                    <label for="index">Interface Index</label>
                    <input class="form-control" type="text" name="interface[ifIndex]" value="<%= interface.ifIndex %>" readonly>
                </div>
                <div class="form-group">
                    <label for="type">Interface Type</label>
                    <input class="form-control" type="text" name="interface[ifType]" value="<%= interface.ifType %>" readonly>
                </div>
                <div class="form-group">
                    <label for="speed">Interface Speed</label>
                    <input class="form-control" type="text" name="interface[ifSpeed]" value="<%= interface.ifSpeed %>" readonly>
                </div>
                <div class="form-group">
                    <label for="speed">Interface High Speed</label>
                    <input class="form-control" type="text" name="interface[ifHighSpeed]" value="<%= interface.ifHighSpeed %>" readonly>
                </div>
                <div class="form-group">
                    <label for="devicename">Device Name</label>
                    <input class="form-control" type="text" name="interface[device][hostname]" value="<%= interface.hostname %>" readonly>
                </div>
                <div class="form-group">
                    <label for="actualspeed">Interface Actual Speed</label>
                    <input class="form-control" type="text" name="interface[actualspeed]" value="<%= interface.actualspeed %>">
                </div>
