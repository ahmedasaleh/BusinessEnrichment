                <div id="sp_serviceType" class="form-group" style="display:none;">
                    <label for="sp_serviceType">Service Type</label>
                    <input class="form-control" type="text" name="interface[sp_serviceType]" value="<%= interface.sp_serviceType %>">
                </div>
                <div id="sp_ipType" class="form-group" style="display:none;">
                    <label for="sp_ipType">IP Type</label>
                    <input class="form-control" type="text" name="interface[sp_ipType]" value="<%= interface.sp_ipType %>">
                </div>
                <div id="sp_vendor" class="form-group" style="display:none;">
                    <label for="sp_vendor">Vendor</label>
                    <input class="form-control" type="text" name="interface[sp_vendor]" value="<%= interface.sp_vendor %>">
                </div>
                <div id="sp_sourceCore" class="form-group" style="display:none;">
                    <label for="sp_sourceCore">Source Core</label>
                    <input class="form-control" type="text" name="interface[sp_sourceCore]" value="<%= interface.sp_sourceCore %>">
                </div>
                <div id="sp_destCore" class="form-group" style="display:none;">
                    <label for="sp_destCore">Destination Core</label>
                    <input class="form-control" type="text" name="interface[sp_destCore]" value="<%= interface.sp_destCore %>">
                </div>
                <div id="sp_siteCode" class="form-group" style="display:none;">
                    <label for="sp_siteCode">Site Code</label>
                    <input class="form-control" type="text" name="interface[sp_siteCode]" value="<%= interface.sp_siteCode %>">
                </div>
                <div id="sp_preNumber" class="form-group" style="display:none;">
                    <label for="sp_preNumber">Pre Number</label>
                    <input class="form-control" type="text" name="interface[sp_preNumber]" value="<%= interface.sp_preNumber %>">
                </div>
                <div id="sp_portID" class="form-group" style="display:none;">
                    <label for="sp_portID">Port ID</label>
                    <input class="form-control" type="text" name="interface[sp_portID]" value="<%= interface.sp_portID %>">
                </div>
                <div id="secondHost" class="form-group" style="display:none;">
                    <label for="secondHost">Second Host</label>
                    <input class="form-control" type="text" name="interface[secondHost]" value="<%= interface.secondHost %>">
                </div>
                <div id="secondPOP" class="form-group" style="display:none;">
                    <label for="secondPOP">Second POP</label>
                    <input class="form-control" type="text" name="interface[secondPOP]" value="<%= interface.secondPOP %>">
                </div>
                <div id="secondInterface" class="form-group" style="display:none;">
                    <label for="secondInterface">Second Interface</label>
                    <input class="form-control" type="text" name="interface[secondInterface]" value="<%= interface.secondInterface %>">
                </div>
                <div id="pop" class="form-group" >
                    <label for="pop">POP</label>
                    <input class="form-control" type="text" name="interface[pop]" value="<%= interface.pop %>">
                </div>
                <div id="linkType" class="form-group" style="display:none;">
                    <label for="linkType">Link Type</label>
                    <select class="form-control" type="text" name="interface[type]" value="<%= interface.type %>">
                        <option value="Local">Local</option>
                        <option value="WAN">WAN</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/devices/<%= interface.hostname.id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

